@model SaborDeMexicoAdmin.Models.ModelViews.ModelMenu
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <br />
    <h1 class="display-4">Sabor de México</h1>
    <br />
    <div class="row">
        <div class="col-sm-12 col-lg-12 table-responsive">
            <h4>Pedidos de pago pendiente</h4>
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Cel</th>

                        <th scope="col">Importe</th>
                        <th scope="col">Productos</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Repartidor A.</th>
                        <th scope="col">Fecha</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GetListOrden)
                    {
                        if (item.Estatus == 0)
                        {
                            <tr>

                                <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                                <td>@Html.DisplayFor(modelItem => item.Cliente.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cliente.Telefono)</td>
                                <td>@Html.DisplayFor(modelItem => item.Total)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                                <td>@Html.DisplayFor(modelItem => item.Ruta.Direccion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Repartidor.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                                <td colspan="2">
                                    <a class="btn btn-success text-white btn-sm mr-1" asp-action="Confirm" asp-controller="Home" asp-route-id="@item.Id">Confirmar </a>

                                    <a class="btn btn-danger text-white btn-sm mr-1" asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Cancelar </a>

                                    <a class="btn btn-info text-white btn-sm " asp-action="Details" asp-controller="Ordens" asp-route-id="@item.Id">Ver más</a>
                                </td>

                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>

        <div class="col-sm-12 col-lg-12 table-responsive">
            <h4>Ordenes para enviar</h4>
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Cel</th>

                        <th scope="col">Importe</th>
                        <th scope="col">Productos</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Repartidor A.</th>
                        <th scope="col">Fecha</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                <tbody>
                        @foreach (var item in Model.GetListOrden)
                        {
                            if (item.Estatus == 1)
                            {
                            <tr>

                                <th scope="row">   @Html.DisplayFor(modelItem => item.Id)</th>
                                <td>@Html.DisplayFor(modelItem => item.Cliente.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cliente.Telefono)</td>
                                <td>@Html.DisplayFor(modelItem => item.Total)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                                <td>@Html.DisplayFor(modelItem => item.Ruta.Direccion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Repartidor.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                                <td scope="col">
                                    <a class="btn btn-info text-white btn-sm mr-1" asp-action="Entrega" asp-controller="Home" asp-route-id="@item.Id">Entregado </a>

                                    <a class="btn btn-danger text-white btn-sm mr-1" asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Cancelar </a>

                                    <a class="btn btn-info text-white btn-sm " asp-action="Details" asp-controller="Ordens" asp-route-id="@item.Id">Ver más</a>
                                </td>

                            </tr>
                            }

                        }
                </tbody>
                </tbody>
            </table>
        </div>


        <hr class="col-12" />
    </div>
    <div class="row">
        <div class="card-deck">
            <div class="col-sm-6 col-lg-4">
                <div class="card text-white" style=" background-color: #05AFF2 !important;">
                    <div class="card-header h4">Numero de 0 Clientes</div>
                    <div class="card-body">
                        <p class="card-text btn-link text-white">Ver más</p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="card text-white" style=" background-color: #04D9D9 !important;">
                    <div class="card-header h4">Numero de 0 Ordenes</div>
                    <div class="card-body">
                        <p class="card-text btn-link text-white">Ver más</p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="card text-white" style=" background-color: #F2C53D !important;">
                    <div class="card-header h4">Numero de 0 Productos</div>
                    <div class="card-body">
                        <p class="card-text btn-link text-white">Ver más</p>
                    </div>
                </div>
            </div>
        </div>

    </div>



</div>
